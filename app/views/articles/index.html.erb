<div class="container my-3">
  <div class="row align-items-center">
    <div class="col-sm-8 col-sm-offset-2">
      <% @articles.each do |article| %>
        <%= link_to article_path(article) do  %>
        <article>
          <h2><%= article.title %></h2>
          <% end %>
          <p>
            <%= article.content%>
          </p>
        </article>
      <% end %>
    </div>
  </div>
</div>
